{
	"name": "user",
	"version": "0.1.0",
	"description": "User service",
	"main": "brunch-config.js",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"start": "npm run build:prod && npm run start:prod",
		"start:dev": "npm i bcrypt && npm i crypto-js && concurrently \"brunch watch\" \"nodemon --watch 'server/**/*.ts' --exec 'ts-node' server/server.ts\"",
		"build:prod": "tsc -p ./server && brunch build --production",
		"start:prod": "node dist/server.js",
		"test": "mocha -r ts-node/register tests/**/*.test.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ShipyardSuite/user.git"
	},
